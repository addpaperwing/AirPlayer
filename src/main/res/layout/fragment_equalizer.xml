<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Spinner
        android:id="@+id/equalizer_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_16_560">

        <!-- seek bar-->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <TextView
                android:text="60 Hz"
                android:textColor="@color/air_primary_text"
                android:textSize="@dimen/xTextSize"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingEnd="@dimen/dp_8_560"
                android:paddingRight="@dimen/dp_8_560"
                android:gravity="end"
                />

            <SeekBar
                android:id="@+id/seek_bar_60hz"
                android:padding="@dimen/dp_8_560"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <TextView
                android:text="230 Hz"
                android:textColor="@color/air_primary_text"
                android:textSize="@dimen/xTextSize"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingEnd="@dimen/dp_8_560"
                android:paddingRight="@dimen/dp_8_560"
                android:gravity="end"
                />

            <SeekBar
                android:id="@+id/seek_bar_230hz"
                android:padding="@dimen/dp_8_560"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            >

            <TextView
                android:text="910 Hz"
                android:textColor="@color/air_primary_text"
                android:textSize="@dimen/xTextSize"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingEnd="@dimen/dp_8_560"
                android:paddingRight="@dimen/dp_8_560"
                android:gravity="end"
                />

            <SeekBar
                android:id="@+id/seek_bar_910hz"
                android:padding="@dimen/dp_8_560"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <TextView
                android:text="4k Hz"
                android:textColor="@color/air_primary_text"
                android:textSize="@dimen/xTextSize"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingEnd="@dimen/dp_8_560"
                android:paddingRight="@dimen/dp_8_560"
                android:gravity="end"
                />

            <SeekBar
                android:id="@+id/seek_bar_4khz"
                android:padding="@dimen/dp_8_560"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <TextView
                android:text="14k Hz"
                android:textColor="@color/air_primary_text"
                android:textSize="@dimen/xTextSize"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingEnd="@dimen/dp_8_560"
                android:paddingRight="@dimen/dp_8_560"
                android:gravity="end"
                />

            <SeekBar
                android:id="@+id/seek_bar_14khz"
                android:padding="@dimen/dp_8_560"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                />

        </LinearLayout>
        <!-- seek bar-->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_64_560"
            android:layout_marginLeft="@dimen/dp_64_560"
            >

            <TextView
                android:text="-15 dB"
                android:textColor="@color/air_primary_text"
                android:textSize="@dimen/xTextSize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:text="0 dB"
                android:textColor="@color/air_primary_text"
                android:textSize="@dimen/xTextSize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                />

            <TextView
                android:text="+15 dB"
                android:textColor="@color/air_primary_text"
                android:textSize="@dimen/xTextSize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_16_560"
            android:gravity="center">

            <TextView
                android:text="Bass boost"
                android:textColor="@color/air_primary_text"
                android:textSize="@dimen/xxTextSize"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:layout_marginEnd="@dimen/dp_8_560"
                android:layout_marginRight="@dimen/dp_8_560"
                />

            <SeekBar
                android:id="@+id/seek_bar_bass_boost"
                android:padding="@dimen/dp_8_560"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>